{
  "name": "speedrun-project-manager",
  "version": "0.1.0",
  "description": "Gestor de proyectos avanzado con cronogramas Gantt usando Mermaid y Markdown",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "dev:mock": "concurrently \"npm run server:dev:mock\" \"npm run client:dev\"",
    "build": "npm run client:build",
    "start": "npm run server:start",
    "server:dev": "nodemon server/index.js",
    "server:dev:mock": "nodemon server/dev-server.js",
    "server:start": "node server/index.js",
    "client:dev": "next dev",
    "client:build": "next build",
    "client:start": "next start",
    "lint": "next lint",
    "test": "jest"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-gitlab2": "^5.0.0",
    "passport-jwt": "^4.0.1",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.1.0",
    "axios": "^1.6.0",
    "mermaid": "^10.6.0",
    "react-markdown": "^9.0.0",
    "remark-gfm": "^4.0.0",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "@tailwindcss/typography": "^0.5.10",
    "jest": "^29.7.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4"
  },
  "keywords": [
    "project-management",
    "gantt",
    "mermaid",
    "markdown",
    "nextjs",
    "express",
    "mongodb"
  ],
  "author": "Rodrigo √Ålvarez (@incognia)",
  "license": "MIT"
}
