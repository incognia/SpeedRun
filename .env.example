# Base Configuration
NODE_ENV=development
PORT=5000
NEXT_PUBLIC_API_URL=http://localhost:5000

# Database
MONGODB_URI=mongodb://localhost:27017/speedrun-project-manager
MONGODB_TEST_URI=mongodb://localhost:27017/speedrun-test

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Session
SESSION_SECRET=your-session-secret-here

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# GitLab OAuth
GITLAB_CLIENT_ID=your-gitlab-client-id
GITLAB_CLIENT_SECRET=your-gitlab-client-secret
GITLAB_CALLBACK_URL=http://localhost:3000/api/auth/gitlab/callback
GITLAB_URL=https://gitlab.com

# Frontend URLs
NEXT_PUBLIC_GITHUB_LOGIN_URL=http://localhost:5000/auth/github
NEXT_PUBLIC_GITLAB_LOGIN_URL=http://localhost:5000/auth/gitlab
NEXT_PUBLIC_SUCCESS_REDIRECT=http://localhost:3000/dashboard
NEXT_PUBLIC_ERROR_REDIRECT=http://localhost:3000/login?error=auth_failed
